<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/bti_cl"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#99000000"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <View
        android:id="@+id/top_bti_v2"
        android:layout_width="match_parent"
        android:layout_height="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <com.google.android.material.card.MaterialCardView
        style="@style/CustomTopCardView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/top_bti_v2"
        android:backgroundTint="@color/white">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:paddingBottom="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/top_btn"
                android:layout_width="match_parent"
                android:layout_height="18dp"
                android:layout_marginTop="17dp"
                android:layout_marginHorizontal="150dp"
                android:backgroundTint="@color/gray_button"
                app:shapeAppearanceOverlay="@style/buttomShape"
                android:textAllCaps="false"
                android:textColor="@color/white"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <TextView
                android:id="@+id/lbl_name_bti_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="14dp"
                android:layout_marginTop="35dp"
                android:text="@string/username"
                android:textColor="@color/text_gray1"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/top_btn" />

            <TextView
                android:id="@+id/value_name_bti_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="@string/content_description"
                android:textColor="@color/text_gray1"
                android:fontFamily="@font/inter_bold"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="@+id/lbl_name_bti_tv"
                app:layout_constraintTop_toBottomOf="@+id/lbl_name_bti_tv" />

            <TextView
                android:id="@+id/lbl_address_bti_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="@string/address"
                android:textColor="@color/text_gray1"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="@+id/lbl_name_bti_tv"
                app:layout_constraintTop_toBottomOf="@+id/value_name_bti_tv" />

            <TextView
                android:id="@+id/value_address_bti_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="@string/content_description"
                android:textColor="@color/text_gray1"
                android:fontFamily="@font/inter_bold"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="@+id/lbl_name_bti_tv"
                app:layout_constraintTop_toBottomOf="@+id/lbl_address_bti_tv" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>