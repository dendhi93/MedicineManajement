<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/column2_irds_gl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.19" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/column3_irds_gl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.39" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/column4_irds_gl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.62" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/column5_irds_gl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.75" />

    <TextView
        android:id="@+id/sale_date_irds_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp"
        android:fontFamily="@font/inter_light_beta"
        android:text="@string/content_description"
        android:textColor="@color/gray_1"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/bill_no_irds_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/inter_light_beta"
        android:text="@string/content_description"
        android:textColor="@color/text_black1"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@id/sale_date_irds_tv"
        app:layout_constraintStart_toStartOf="@id/column2_irds_gl"
        app:layout_constraintTop_toTopOf="@id/sale_date_irds_tv" />

    <TextView
        android:id="@+id/name_irds_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/inter_light_beta"
        android:text="@string/content_description"
        android:textColor="@color/gray_1"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@id/sale_date_irds_tv"
        app:layout_constraintStart_toStartOf="@id/column3_irds_gl"
        app:layout_constraintTop_toTopOf="@id/sale_date_irds_tv" />

    <TextView
        android:id="@+id/qty_irds_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/inter_light_beta"
        android:text="@string/content_description"
        android:textColor="@color/gray_1"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@id/sale_date_irds_tv"
        app:layout_constraintStart_toEndOf="@id/column4_irds_gl"
        app:layout_constraintTop_toTopOf="@id/sale_date_irds_tv" />


    <com.google.android.material.button.MaterialButton
        android:id="@+id/dtl_rds_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/action"
        app:shapeAppearanceOverlay="@style/buttomShape"
        android:backgroundTint="@color/white"
        android:layout_marginEnd="13dp"
        android:textColor="@color/text_gray1"
        app:strokeColor="@color/border_color2"
        app:strokeWidth="1dp"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@id/sale_date_irds_tv"
        app:layout_constraintStart_toEndOf="@id/column5_irds_gl"
        app:layout_constraintTop_toTopOf="@id/sale_date_irds_tv"/>

</androidx.constraintlayout.widget.ConstraintLayout>