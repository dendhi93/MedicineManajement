<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:background="@drawable/dialog_bg"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/search_label_s2cd_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="17dp"
            android:layout_marginTop="17dp"
            android:fontFamily="@font/inter_regular"
            android:text="@string/content_description"
            android:textColor="@color/text_black1"
            android:textSize="15sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/col1_s2cd_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="@string/content_description"
            android:textColor="@color/gray_1"
            android:textSize="13sp"
            android:layout_marginStart="17dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/search_label_s2cd_tv" />

        <TextView
            android:id="@+id/col2_s2cd_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="@string/content_description"
            android:textColor="@color/gray_1"
            android:layout_marginEnd="17dp"
            android:textSize="13sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/search_label_s2cd_tv" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/list_s2cd_rv"
            android:layout_width="0dp"
            android:layout_height="230dp"
            app:layout_constraintEnd_toEndOf="@id/col2_s2cd_tv"
            app:layout_constraintStart_toStartOf="@id/search_label_s2cd_tv"
            app:layout_constraintTop_toBottomOf="@id/col1_s2cd_tv"
            tools:listitem="@layout/item_search_2_column" />

        <View
            android:id="@+id/separator_s2cd_view"
            android:layout_width="0dp"
            android:layout_height="0.65dp"
            android:layout_marginTop="5dp"
            android:background="@color/separator_color2"
            app:layout_constraintEnd_toEndOf="@id/col2_s2cd_tv"
            app:layout_constraintStart_toStartOf="@id/col1_s2cd_tv"
            app:layout_constraintTop_toBottomOf="@id/list_s2cd_rv" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/cancel_s2cd_mb"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="13dp"
            android:layout_marginEnd="13dp"
            android:layout_marginBottom="13dp"
            android:backgroundTint="@color/white"
            android:paddingTop="9dp"
            android:paddingBottom="9dp"
            android:text="@string/cancel"
            android:textColor="@color/text_gray1"
            app:layout_constraintEnd_toStartOf="@id/choose_s2cd_mb"
            app:layout_constraintStart_toStartOf="@id/separator_s2cd_view"
            app:layout_constraintTop_toBottomOf="@id/separator_s2cd_view"
            app:layout_constraintBottom_toBottomOf="parent"
            app:strokeColor="@color/border_color2"
            app:strokeWidth="1dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/choose_s2cd_mb"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="13dp"
            android:layout_marginTop="13dp"
            android:backgroundTint="@color/gray_button"
            android:paddingTop="9dp"
            android:paddingBottom="9dp"
            android:text="@string/choose"
            android:visibility="gone"
            android:textColor="@color/white"
            app:layout_constraintEnd_toEndOf="@id/separator_s2cd_view"
            app:layout_constraintStart_toEndOf="@id/cancel_s2cd_mb"
            app:layout_constraintTop_toBottomOf="@id/separator_s2cd_view" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>